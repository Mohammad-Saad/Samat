<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/golden_flat"
    android:orientation="vertical"
    android:padding="55dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="Please Tap Sync Location to Get Locations"></TextView>

        <ListView
            android:id="@+id/listView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#FCFAFA"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/button2"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CA6F14"
            android:onClick="GetJson"
            android:text="Sync Locations"
            android:textColor="@color/button_text" />

        <Button
            android:id="@+id/edit_settings"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_weight="1"
            android:background="#CA6F14"
            android:onClick="EditSettings"
            android:text="Settings"
            android:textColor="@color/button_text"></Button>

        <Button
            android:id="@+id/Exit"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="#CA6F14"
            android:onClick="ExitService"
            android:text="Exit"
            android:textColor="@color/button_text"></Button>

    </LinearLayout>

</LinearLayout>
